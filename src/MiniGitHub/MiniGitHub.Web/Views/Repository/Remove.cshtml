@model RemoveRepoDTO

@{
    ViewBag.Title = "Remove Repo";
    Layout = "_Layout";
}

@using (Html.BeginForm(
    "Remove", 
    "Repository",
    FormMethod.Post,
    new { @class = "card p-4 shadow-sm mx-auto", style = "max-width: 600px;" }
))
{
    @Html.AntiForgeryToken();
    @Html.HiddenFor(m => m.RepositoryId);
    @Html.HiddenFor(m => m.Name);
    @Html.HiddenFor(m => m.Description);

    <h2 class="mb-3 text-danger fw-bold">Remove Repository</h2>

    <p class="text-muted mb-4">
        Are you sure you want to permanently remove this repository?
    </p>

    <div class="card border-danger mb-4">
        <div class="card-header bg-danger text-white fw-semibold">
            Repository Details
        </div>
        <div class="card-body">
            <p class="mb-1"><strong>Name:</strong> @Model.Name</p>
            <p class="mb-0"><strong>Description:</strong> @Model.Description</p>
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-danger px-4">
            <i class="bi bi-trash"></i> Remove
        </button>

        <a asp-action="Detail"
           asp-route-id="@Model.RepositoryId"
           class="btn btn-outline-secondary px-4">
            Cancel
        </a>
    </div>
}