@model IssueAddVM

@{
    ViewBag.Title = "Add Issue";
    Layout = "_Layout";
}

<form asp-controller="Issue"
      asp-action="Add"
      method="post"
      class="card p-4 shadow-sm mx-auto"
      style="max-width: 800px;">
    
    <input type="hidden" asp-for="Form.RepositoryId"></input>
      
    <h3 class="mb-4">
        Open a new issue for
        <a asp-controller="User" 
           asp-action="Detail" 
           asp-route-id="@Model.Repo.OwnerId">@Model.Repo.Owner.Username</a>/<a asp-controller="Repository" 
                                                                                asp-action="Detail" 
                                                                                asp-route-id="@Model.Repo.Id">@Model.Repo.Name</a>
    </h3>

    <div class="form-floating mb-2">
        <input type="text" asp-for="Form.Title" name="Title" class="form-control" placeholder required>
        <label asp-for="Form.Title" class="form-title"></label>
    </div>

    <div class="form-floating mb-2">
        <textarea class="form-control" asp-for="Form.Description" name="Description" style="height: 120px;" placeholder="Enter description"></textarea>
        <label asp-for="Form.Description" class="form-label"></label>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-write"></i> Open issue
        </button>
        <a class="btn btn-outline-danger" asp-controller="Repository" asp-action="Detail" asp-route-id="@Model.Repo.Id">
            Cancel
        </a>
    </div>
</form>

